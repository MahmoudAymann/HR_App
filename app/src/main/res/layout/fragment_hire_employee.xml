<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:background="@drawable/app_background"
            android:padding="@dimen/_16sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_new"
                style="@style/SubmitButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:text="@string/hire_new_employee"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/btn_replacement"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_replacement"
                style="@style/SubmitButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:text="@string/hire_replacement_employee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_new"
                app:layout_constraintTop_toTopOf="@id/btn_new"
                android:layout_marginStart="@dimen/_8sdp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</layout>