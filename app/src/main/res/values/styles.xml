<resources>

    <style name="MaterialButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonLangStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
    </style>

    <style name="TIL.WhiteStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="boxStrokeColor">@color/til_border_state_color</item>
        <item name="android:textColorHint">#CCFFFFFF</item>
        <item name="endIconTint">@color/white</item>
    </style>
    <style name="TIL.WhiteStyle.Filled" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/til_border_state_transparent</item>
    </style>
    <style name="TIL.WhiteStyle.Filled.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/til_border_state_transparent</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="EditText.WhiteStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="SubmitButton" parent="">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>


    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SpinnerButton" parent="SubmitButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/_24sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="icon">@drawable/ic_enter_arrow</item>
    </style>


    <style name="BlackTextColor" parent="">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="til_dropdown_list" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">@dimen/_24sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_24sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_24sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_24sdp</item>
        <item name="boxStrokeColor">@color/til_border_state_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="circular_image_view" parent="">
        <item name="civ_border">true</item>
        <item name="civ_shadow">true</item>
        <item name="civ_shadow_radius">@dimen/_2sdp</item>
        <item name="civ_shadow_gravity">center</item>
        <item name="civ_border_color">@color/white</item>
        <item name="civ_border_width">@dimen/_1sdp</item>
    </style>

    <style name="MY_DIALOG_FRAGMENT">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/half_black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="RequestDetailsHeadTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>