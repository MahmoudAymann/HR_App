<resources>

    <style name="MaterialButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="ButtonLangStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
    </style>

    <style name="TIL.WhiteStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="hintTextAppearance">@style/TIL.TextAppearance.Hint</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="boxStrokeColor">@color/til_border_state_color</item>
        <item name="android:textColorHint">@color/half_white</item>
    </style>

    <style name="TIL.TextAppearance.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText.WhiteStyle" parent="Widget.AppCompat.EditText">
        <item name="textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="SubmitButton" parent="">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BlackTextColor" parent="">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>